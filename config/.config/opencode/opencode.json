{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "git push *": "ask",
      "git status *": "allow",
      "git diff *": "allow",
      "git branch *": "allow",
      "git commit *": "ask",
      "ls": "allow",
      "pwd": "allow",
      "rm *": "ask",
      "* tsx --noEmit": "allow"
    }
  },
  "mcp": {
    "playwriter": {
      "type": "local",
      "command": ["npx", "-y", "playwriter@latest"],
      "enabled": true,
    }
  }
}
